<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<!-- Database connection settings -->
		<property name="hbm2ddl.auto">update</property> <!-- Two option create and update-->
		<property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
		<!-- to check the internal query in console -->
		<property name="show_sql">true</property> 
		
		<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/manytomanybidirect</property>
		<property name="connection.username">root</property>
		<property name="connection.password">abc123</property>
		<!-- Give Entity or Mapping class to hibernate for which we need to do mapping-->
<!-- 		<mapping class="com.hexaware.MappingHibernate.beans.Employee" />
	<mapping class="com.hexaware.MappingHibernate.beans.Address" /> -->
<!-- 	<mapping class="com.hexaware.MappingHibernate.beans.Student" />
	<mapping class="com.hexaware.MappingHibernate.beans.Department" /> -->
	<mapping class="com.hexaware.MappingHibernate.beans.Order"/>
	<mapping class="com.hexaware.MappingHibernate.beans.Product"/>
	
	</session-factory>
</hibernate-configuration>